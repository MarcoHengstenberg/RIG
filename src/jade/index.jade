doctype html
html(lang="en")
  head
    title RIG by Codeship

    link(rel="stylesheet", href="/assets/css/rig.css")
    link(rel="stylesheet", href="/assets/css/rig-presentation.css")

  body.has-menu
    button.menuToggleButton.-right Menu
    .menu.-left(data-rig-menu="horizontal")
      nav.nav
        ul
          li: a(href="#") Menu Item 1
          li: a(href="#") Menu Item 2
          li: a(href="#") Menu Item 3
          li: a(href="#") Menu Item 4
          li: a(href="#") Menu Item 5
          li: a(href="#") Menu Item 6

    .container
      h1 RIG 2.0
      h2 An aesthetically unopinionated CSS Framework by Codeship

      include ./partials/_typography.jade
      include ./partials/_grid.jade
      include ./partials/_forms.jade

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js", async="true")
    script(src="/assets/js/rig.js", async="true")
